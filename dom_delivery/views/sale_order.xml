<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- voir des champs utiles avec ?debug -->
    <record id="dom_decond_so_view" model="ir.ui.view">
        <field name="name">dom_decond Sale Order Form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
           <xpath expr="//field[@name='order_line']//tree" position="inside">
                <field name="is_delivery" groups="base.group_no_one" />
           </xpath>
        </field>
    </record>

</odoo>
