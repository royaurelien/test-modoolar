<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Form view -->
    <record model="ir.ui.view" id="acc_export_line">
        <field name="name">Exportation</field>
        <field name="model">yz.acc.report.extract</field>
        <field name="arch" type="xml">
            <form>
                <group name="choices">
                    <field name="account_id" string="Compte"/>
                    <field name="date_debut" string="Date de dÃ©but"/>
                    <field name="date_fin" string="Date de fin"/>
                </group>
                <group name="button">
                    <button name="action_export_extract" string="Export PDF" type="object" class="btn btn-success" icon="fa-download"/>
                    <button name="action_export_extract_excel" string="Export excel" type="object" class="btn btn-success" icon="fa-download"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Action -->
   <record model="ir.actions.act_window" id="action_wizard_export_line">
        <field name="name">Extrait de compte</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">yz.acc.report.extract</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="acc_export_line"/>
        <field name="target">new</field>
   </record>

   <!-- Ajout d'un menu deroulant pour les etats comptables dans le menu de facturation, et de son sous-menu d'extrait de compte -->
   <menuitem name="Etats comptables" id="menu_exports_account" parent="account.menu_finance"/>
   <menuitem name="Extrait de compte" id="menu_exports_account_extract" parent="menu_exports_account" action="action_wizard_export_line"/>

</odoo>