<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="tree_order_inherit" model="ir.ui.view">
        <field name="name">Commandes</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='amount_total']" position="after">
                <field name="residual" string="Montant dû" sum="Total dû" widget="monetary"/>
            </xpath>

        </field>
    </record>

    <!-- Inherit Form View to Modify it -->
    <record id="form_order_inherit" model="ir.ui.view">
        <field name="name">Commands</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='amount_total']" position="after">
                <field name="residual"/>
            </xpath>

        </field>
    </record>

</odoo>
