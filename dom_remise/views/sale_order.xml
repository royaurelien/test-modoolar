<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Inherit Form View to Modify it -->
    <record id="dom_remise_sale_form" model="ir.ui.view">
        <field name="name">Tarif Domitec Sale</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="remise" options="{'no_quick_create':True}" />
            </xpath>

            <xpath expr="//field[@name='amount_untaxed']" position="before">
                <field name="amount_ht_net" />
            </xpath>

            <xpath expr="//field[@name='order_line']/form/group/group/field[@name='tax_id']" position="before">
                <field name="no_remise" groups="base.group_no_one"/>
            </xpath>

        </field>
    </record>


</odoo>
