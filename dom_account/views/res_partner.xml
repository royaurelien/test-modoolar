<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Inherit Form View to Modify it -->
    <record id="dom_account_partner_form" model="ir.ui.view">
        <field name="name">Contacts</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <xpath expr="//sheet" position="before">
                <header name="header_button_account">
                    <button name="action_get_ref" type="object" string="Attribuer une ref interne" />
                    <button name="action_create_accounts" type="object" string="Attribuer les comptes comptable"/>
                </header>
            </xpath>

        </field>
    </record>
</odoo>
