<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Inherit Form View to Modify it -->
    <record id="partner_form_action_com" model="ir.ui.view">
        <field name="name">Clients Actions Commerciales</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button o_res_partner_tipp_opp" type="object" icon="fa-clock-o"  name="action_view_action">
                    <field string="Actions" name="action_count" widget="statinfo" attrs="{'invisible':[('company_type','=', 'person')]}"/>
                    <field string="Actions" name="contact_action_count" widget="statinfo" attrs="{'invisible':[('company_type','=', 'company')]}"/>
                </button>
            </xpath>

            <xpath expr="//field[@name='category_id']" position="after">
                <field name="last_action" attrs="{'invisible':[('company_type','=', 'person')]}"/>
            </xpath>

        </field>
    </record>
</odoo>
