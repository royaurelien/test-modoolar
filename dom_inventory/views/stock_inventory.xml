<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="yzi_stock_inventory_inherit" model="ir.ui.view">
            <field name="name">Our inventory form view</field>
            <field name="model">stock.inventory</field>
            <field name="inherit_id" ref="stock.view_inventory_form"/>
            <field name="arch" type="xml">

                <xpath expr="//div[@class='oe_title']" position="after">
                    <button name="action_compute_cout" string="Calculer les coÃ»ts" type="object" class="btn btn-info" groups="mybase.group_fix_me"/>
                </xpath>

                <xpath expr="//tree/field[@name='product_qty']" position="after">
                    <field name="cout"/>
                    <field name="cout_global"/>
                </xpath>

                <xpath expr="//field[@name='line_ids']" position="after">
                    <group class="oe_subtotal_footer oe_right" colspan="2" name="inventory_total">
                        <field name="total" widget='monetary' string="Total"/>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</openerp>


