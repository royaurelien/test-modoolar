<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Inherit Form View to Modify it -->
    <record id="dom_expense_amount" model="ir.ui.view">
        <field name="name">Note de fraix</field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense.hr_expense_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='unit_amount']" position="replace">
                <field name="unit_amount" required="1" widget="monetary" options="{'currency_field': 'currency_id'}" string="Prix unitaire HT"/>
            </xpath>

        </field>
    </record>

</odoo>