<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="tree_sale_date_remove" model="ir.ui.view">
        <field name="name">Devis</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_order_dates.view_quotation_tree_date"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='commitment_date']" position="replace"></xpath>
        </field>
    </record>

    <record id="tree_sale_inherit" model="ir.ui.view">
        <field name="name">Devis</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='amount_total']" position="before">
                <field name="amount_untaxed" string="Total HT" sum="Total HT" widget="monetary"/>
            </xpath>

        </field>
    </record>

</odoo>
