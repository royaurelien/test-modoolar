    <!-- configure the invoice email template to send our invoice
    instead of the default one. This way, when we press "send by email"
    in the form, the correct report is added as attachment -->
    <record id="account.email_template_edi_invoice" model="mail.template">
        <field name="report_template" ref="dom_reports.dom_report_invoice_action"/>
    </record>

