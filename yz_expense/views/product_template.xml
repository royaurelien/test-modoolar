<odoo>
    <record id="product_template_yzi_expense" model="ir.ui.view">
        <field name="name">product template yzi expense</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="inside">
                <div>
                    <field name="is_expensed"/>
                    <label for="is_expensed"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>