<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Inherit Form View to Modify it -->
    <record id="dom_invoice_tree" model="ir.ui.view">
        <field name="name">Dom Invoice Tree</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_tree"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='amount_total_signed']" position="before">
                <field name="amount_untaxed" string="Total HT" sum="Total HT"/>
            </xpath>

        </field>
    </record>

    <record id="invoice_form" model="ir.ui.view">
        <field name="name">Dom Invoice Form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="partner_centrale_id" invisible="1"/>
            </xpath>

        </field>
    </record>

    <record id="view_account_invoice_filter_inherit_invoices" model="ir.ui.view">
        <field name="name">Dom Invoice Form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter_inherit_invoices"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="partner_centrale_id"/>
            </xpath>

            <xpath expr="//search" position="inside">
                <separator/>
                <filter string="Centrale" name="centrale_defined" domain="[('partner_centrale_id', '!=', False)]"/>
            </xpath>

        </field>
    </record>

    <!-- This Menu Item will appear in the Upper bar, That's why It needs NO parent or action -->
    <menuitem id="dom_salerman_account" name="Factures Client" parent="sale.menu_sale_invoicing" action="account.action_invoice_tree1"/>


    <record id="dom_salerman_account_tree" model="ir.ui.view">
        <field name="name">Facture Commercial </field>
        <field name="model">account.invoice</field>
        <field name="groups_id" eval="[(4,ref('dom_account.dom_salerman_account_group'))]"/>
        <field name="inherit_id" ref="account.invoice_tree"/>
        <field name="arch" type="xml">

            <xpath expr="//tree" position="attributes">
                <attribute name="create">false</attribute>
            </xpath>

        </field>
    </record>


</odoo>
