<odoo>

    <!-- sale order report
    attachment_use, etc
    1 seule action pour devis & bon de commande
    -->
    <report
        id="dom_report_invoice_action"
        model="account.invoice"
        string="Facture Domitec"
        name="dom_reports.dom_report_invoice"
        file="dom_reports.dom_report_invoice"
        report_type="qweb-pdf"
        />

    <!-- paperformat="dom_reports.paperformat_dom_a4" -->
    <record id="dom_reports.dom_report_invoice_action" model="ir.actions.report">

        <field name="paperformat_id" ref="dom_reports.paperformat_dom_a4"/>

    </record>

