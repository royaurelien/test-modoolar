<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">Settings Com Dom Reports</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="30"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside" >
                <div class="app_settings_block" data-string="Rapports" string="Rapports"
                    data-key="dom_reports">
                    <div class="row">
                        <div class="col-xs-5">
                            <h2>Message de tête de page</h2>
                            <div class="row o_settings_container">
                                <field name="top_message" widget="image" />
                            </div>
                            <h2>Logos de pied de page</h2>
                            <div class="row o_settings_container">
                                <div class="col-xs-12 o_setting_box">
                                    <field name="footer_logo_1" widget="image" />
                                    <field name="footer_logo_2" widget="image" />
                                    <field name="footer_logo_3" widget="image" />
                                    <field name="footer_logo_4" widget="image" />
                                </div>
                            </div>
                            <h2>Document à utiliser pour l'aperçu</h2>
                            <div class="row o_settings_container">
                                <field name="prev_id" />
                            </div>
                        </div>
                        <div class="col-xs-7">
                            <h2>Aperçu</h2>
                            <field name="prev_prev_id" widget="dr_iframe_widget" />
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container">
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
